<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoseWeight">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Weight Lose"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please choose one of the following workouts:"
        android:textSize="18dp"
        android:gravity="left"
        android:layout_marginTop="100dp"
        />

    <Button
        android:id="@+id/lose1"
        android:layout_width="320dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="160dp"
        android:text="Cardio"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textAlignment="gravity"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/lose2"
        android:layout_width="320dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="280dp"
        android:text="High Intensity Interval Training "
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textAlignment="gravity"
        />

    <Button
        android:id="@+id/lose3"
        android:layout_width="320dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="400dp"
        android:text=" Free Weights"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textAlignment="gravity"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="520dp"
        android:textAlignment="center"

        android:textSize="20dp"
        android:text="When going for the weight loss workouts, it is really recommended to:">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="570dp"
        android:textAlignment="center"
        android:textSize="20dp"
        android:text="Cardio once a week.">
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="590dp"
        android:textAlignment="center"
        android:textSize="20dp"
        android:text="HIIT once a week.">
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="610dp"
        android:textAlignment="center"
        android:textSize="20dp"
        android:text="Free Weights three times a week">
    </TextView>





    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_navigator"
        app:itemBackground="@color/purple_500"
        app:itemTextColor="@color/white"
        app:itemIconTint="@color/white"
        app:menu="@menu/bottom_nav_menu"
        android:layout_alignParentBottom="true" />


</RelativeLayout>
