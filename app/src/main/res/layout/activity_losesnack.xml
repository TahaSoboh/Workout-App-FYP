<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Losesnack">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="POPCORN"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="10dp"
        >
    </TextView>

    <ImageView

        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/popcorn"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="125dp"
        android:layout_marginRight="10dp"
        android:text="Popcorn is a great snack for weight loss because it is low calorie, but also a great source of fiber, which can help you feel fuller longer. Per serving (3 cups of air-popped popcorn): 93 calories, 1.1 g fat, 18.6 g carbs, 3.6 g fiber, 3 g protein"
        android:textSize="12dp"
        tools:ignore="TextSizeCheck"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NUTS"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="10dp">
    </TextView>

    <ImageView

        android:layout_width="110dp"
        android:layout_height="120dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="310dp"
        android:src="@drawable/nuts"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="325dp"
        android:layout_marginRight="10dp"
        android:text="Pankonin is a fan of nuts like walnuts, peanuts, and almonds because they are full of heart-healthy monosaturated fats and fiber. Per serving of raw almonds (Â¼ cup): 170 calories, 15 g fat, 7 g carbs, 4 g fiber, 6 g protein."
        android:textSize="12dp"
        tools:ignore="TextSizeCheck"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GRAPES"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="10dp">
    </TextView>

    <ImageView

        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="515dp"
        android:src="@drawable/grapes"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="520dp"
        android:layout_marginRight="10dp"
        android:text="Grapes are a great source of hydration and fiber, says Pankonin. Plus, they're naturally sweet. Per serving (1 cup): 110 calories, 0.2 g fat, 29 g carbs, 1.4 g fiber, 1.1 g protein"
        android:textSize="12dp"
        tools:ignore="TextSizeCheck">
    </TextView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_navigator"
        app:itemBackground="@color/purple_500"
        app:itemTextColor="@color/white"
        app:itemIconTint="@color/white"
        app:menu="@menu/bottom_nav_menu"
        android:layout_alignParentBottom="true" />





</RelativeLayout>