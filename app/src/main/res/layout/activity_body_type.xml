<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BodyType">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please choose your goal:"
        android:textSize="20dp"
        android:gravity="left"
        android:layout_marginTop="50dp"
        />


    <Button
        android:id="@+id/buttonlose"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="120dp"
        android:text="."
        android:background="@drawable/weightloss"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Loose Weight"
        android:layout_marginStart="40dp"
        android:layout_below="@id/buttonlose"
        android:textSize="20dp"
        android:gravity="left"
        />

    <Button
        android:id="@+id/buttongain"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="40dp"
        android:text=".."
        android:background="@drawable/gainmuscle"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Gain Muscle"
        android:layout_marginEnd="40dp"
        android:layout_below="@id/buttongain"
        android:textSize="20dp"
        android:gravity="right"
        />

    <Button
        android:id="@+id/buttonshred"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="150dp"
        android:layout_marginTop="300dp"
        android:textColor="@color/purple_500"
        android:text="."
        android:background="@drawable/shred"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Shredded"
        android:layout_below="@id/buttonshred"
        android:textSize="20dp"
        android:gravity="center"
        />


    <Button
        android:id="@+id/bmicalc"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="490dp"
        android:gravity="center"
        android:text="Calculate BMI"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/dietplan"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="580dp"
        android:gravity="center"
        android:text="DIET PLAN"
        android:textColor="@color/white"
        android:backgroundTint="@color/green"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_navigator"
        app:itemBackground="@color/purple_500"
        app:itemTextColor="@color/white"
        app:itemIconTint="@color/white"
        app:menu="@menu/bottom_nav_menu"
        android:layout_alignParentBottom="true" />




</RelativeLayout>