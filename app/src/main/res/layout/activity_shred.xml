<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Shred">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Shredded"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please choose one of the following workouts:"
        android:textSize="18dp"
        android:gravity="left"
        android:layout_marginTop="80dp"
        />


    <Button
        android:id="@+id/shred1"
        android:layout_width="320dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="130dp"
        android:text="Shoulders and Abs"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textAlignment="gravity"
        android:textAllCaps="false"
        />


    <Button
        android:id="@+id/shred2"
        android:layout_width="320dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="230dp"
        android:text="Arms and Abs"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textAlignment="gravity"
        />

    <Button
        android:id="@+id/shred3"
        android:layout_width="320dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="330dp"
        android:text="Legs and Abs"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        />

    <Button
        android:id="@+id/shred4"
        android:layout_width="320dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="430dp"
        android:text="Back and Abs"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/shred5"
        android:layout_width="320dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="530dp"
        android:text="Chest and Abs"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        />




    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_navigator"
        app:itemBackground="@color/purple_500"
        app:itemTextColor="@color/white"
        app:itemIconTint="@color/white"
        app:menu="@menu/bottom_nav_menu"
        android:layout_alignParentBottom="true" />


</RelativeLayout>

